@model EmployeeManagement.MVCFramework.Models.View_Model.OrganizationViewModel

@{
    ViewBag.Title = "Update Organization";
}

<h2>Update Organization</h2>

@using (Html.BeginForm("UpdateOrganization", "Organization", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    @Html.Hidden("organizationId", Model.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Address)
        @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Address)
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
}

<a href="@Url.Action("GetAllOrganizations", "Organization")" class="btn btn-secondary">Cancel</a>
